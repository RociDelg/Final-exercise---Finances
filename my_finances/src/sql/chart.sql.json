{
	"TABLE": "chart",
	"CREATE_TABLE": "CREATE TABLE chart (id INTEGER PRIMARY KEY AUTOINCREMENT, user_id INTEGER NOT NULL, name TEXT NOT NULL, description TEXT, chart_type TEXT NOT NULL, data TEXT NOT NULL, created_at DATETIME, updated_at DATETIME, FOREIGN KEY (user_id) REFERENCES user(id))",
	"SELECT_ALL": "SELECT * FROM chart",
	"SELECT_BY_ID": "SELECT * FROM chart WHERE id = $id",
	"SELECT_BY_USER_ID": "SELECT * FROM chart WHERE user_id = $user_id",
	"SELECT_BY_CHART_TYPE": "SELECT * FROM chart WHERE user_id = $user_id AND chart_type = $chart_type",
	"INSERT": "INSERT INTO chart (user_id, name, description, chart_type, data, created_at, updated_at) VALUES ($user_id, $name, $description, $chart_type, $data, $created_at, $updated_at)",
	"UPDATE": "UPDATE chart SET name = $name, description = $description, chart_type = $chart_type, data = $data, updated_at = $updated_at WHERE id = $id",
	"DELETE": "DELETE FROM chart WHERE id = $id",
